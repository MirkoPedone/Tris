<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo colorato -->
    <item>
        <shape>
            <solid android:color="#FFFFFF"/> <!-- Colore di sfondo, cambialo dinamicamente -->
            <corners android:radius="16dp"/> <!-- Angoli arrotondati -->
        </shape>
    </item>

    <!-- Bordo -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape>
            <solid android:color="#FFFFFF"/> <!-- Colore di sfondo interno -->
            <stroke android:color="#FF5733" android:width="4dp"/> <!-- Colore e larghezza del bordo -->
            <corners android:radius="16dp"/> <!-- Angoli arrotondati -->
        </shape>
    </item>
</layer-list>
